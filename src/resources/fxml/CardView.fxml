<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="800.0" prefWidth="1500.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hankaji.icm.controllers.CardController">
    <children>
        <VBox prefHeight="497.0" prefWidth="923.0" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Insurance Cards">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0" style="-fx-border-color: #c1c1c1; -fx-border-radius: 8;">
                            <children>
                                <TextField fx:id="searchField" promptText="Enter Card Number" style="-fx-border-color: transparent;" />
                                <Button onAction="#handleSearch" text="Search">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                            </padding>
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0">
                    <children>
                        <Button fx:id="addCard" mnemonicParsing="false" text="Add Card" />
                    </children>
                </HBox>
                <ListView fx:id="cardListView" prefHeight="378.0" prefWidth="926.0" style="-fx-background-radius: 12; -fx-border-radius: 12;" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</StackPane>